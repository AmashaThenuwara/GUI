<Window x:Class="Pharmacy_Management_System_Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy_Management_System_Coursework"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/AA.jpg"/>
        </Grid.Background>
        <GroupBox HorizontalAlignment="Center" Height="193" Header="" Margin="0,150,0,0" VerticalAlignment="Top" Width="848">
            <Grid>
                <Label Content="User Name :" HorizontalAlignment="Left" Height="47" Margin="17,19,0,0" VerticalAlignment="Top" Width="676" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" Foreground="#FF790000"/>
                <Label Content="Label" HorizontalAlignment="Left" Height="47" Margin="17,264,0,0" VerticalAlignment="Top" Width="676"/>
                <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Height="51" Margin="17,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="746" VerticalContentAlignment="Center" FontSize="18"/>
            </Grid>
        </GroupBox>
        <GroupBox HorizontalAlignment="Center" Height="192" Header="" Margin="0,370,0,0" VerticalAlignment="Top" Width="848">
            <Grid>
                <Label Content="Password :" HorizontalAlignment="Left" Height="47" Margin="17,19,0,0" VerticalAlignment="Top" Width="676" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" Foreground="#FF7E0000"/>
                <PasswordBox x:Name="TxtPassword" HorizontalAlignment="Left" Height="52" Margin="17,85,0,0" VerticalAlignment="Top" Width="751" VerticalContentAlignment="Center" FontSize="18"/>
            </Grid>
        </GroupBox>
        <Button Content="Login" HorizontalAlignment="Center" Height="100" Margin="0,614,0,0" VerticalAlignment="Top" Width="160" FontWeight="Bold" FontSize="36" Click="Button_Click" Foreground="#FF790000"/>

    </Grid>
</Window>
