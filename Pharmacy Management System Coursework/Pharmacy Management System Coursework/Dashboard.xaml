<Window x:Class="Pharmacy_Management_System_Coursework.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy_Management_System_Coursework"
        mc:Ignorable="d"
        Title="Dashboard" Height="800" Width="1300">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/FF.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="     TBMA &#xD;&#xA;PHARMACY" HorizontalAlignment="Center" Height="245" VerticalAlignment="Center" Width="335" Grid.Row="1" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Castellar" FontWeight="Bold" Foreground="#FF7C0000"/>
        <Button x:Name="Btn1" Content="" HorizontalAlignment="Center" Height="205" Margin="0,74,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="246" Click="Btn1_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/identity-card.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn2" Content="" HorizontalAlignment="Center" Height="205" Margin="0,74,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="246" Grid.Column="2" Click="Btn2_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/inpatient.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn4" Content="" HorizontalAlignment="Center" Height="205" Margin="0,74,0,0" VerticalAlignment="Top" Width="246" Grid.Column="2" Grid.Row="2" Click="Btn4_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/supplier.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn5" Content="" HorizontalAlignment="Center" Height="205" Margin="0,74,0,0" VerticalAlignment="Top" Width="246" Grid.Column="1" Grid.Row="2" Click="Btn5_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/medical-chechup.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn3" Content="" HorizontalAlignment="Center" Height="205" Margin="0,74,0,0" VerticalAlignment="Top" Width="246" Grid.Row="2" Click="Btn3_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/medicine.png"/>
            </Button.Background>
        </Button>
        <Label Content="Employees" HorizontalAlignment="Center" Height="47" Margin="0,279,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="246" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <Label Content="Patients" HorizontalAlignment="Center" Height="47" Margin="0,279,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="246" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <Label Content="Suppliers" HorizontalAlignment="Center" Height="47" Margin="0,279,0,0" VerticalAlignment="Top" Width="246" Grid.Column="2" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <Label Content="Pescription" HorizontalAlignment="Center" Height="47" Margin="0,279,0,0" VerticalAlignment="Top" Width="246" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <Label Content="Medicines" HorizontalAlignment="Center" Height="47" Margin="0,279,0,0" VerticalAlignment="Top" Width="246" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
